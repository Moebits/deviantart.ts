{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "module": "es6",
        "target": "es3",
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },

    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "exclude": ["node_modules", "dist"],
        "ignoreCompilerErrors": true,
        "includeDeclarations": true
    }
}